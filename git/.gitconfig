[alias]
pr-fetch = "!_(){ git fetch ${2:-upstream} pull/$1/head; }; _"
pr = "!_(){ git pr-fetch $2 $1; git checkout FETCH_HEAD -B pr-$1; }; _"
pr-merge = "!_(){ git pr-fetch $2 $1; git merge FETCH_HEAD; }; _"

[user]
	name = Kira Evans
	email = contact@kne42.me

[github]
	user = kne42

[core]
	editor = nano
	excludesfile = ~/.gitignore_global

[merge]
	log = true

[push]
	followTags = true

[url "git@github.com:"]
	insteadOf = "gh-priv:"
	pushInsteadOf = "gh:"
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"

[url "git://github.com/"]
	insteadOf = "gh:"
	insteadOf = "https://github.com/"

[include]
	path = ~/.gitconfig_local
